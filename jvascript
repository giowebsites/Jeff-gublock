document.getElementById('gunSpin').addEventListener('click', function() {
    // Cambiar el src del iframe para cargar el juego de Gun Spin
    document.getElementById('gameFrame').src = 'https://html5.gamedistribution.com/917cce8c44c44638a8cdc2a1794b65c8/?gd_sdk_referrer_url=https://www.minijuegos.com/juego/gun-spin'; // Reemplaza con la URL correcta del juego
    document.getElementById('gameFrame').style.display = 'block'; // Muestra el iframe con el juego
});

